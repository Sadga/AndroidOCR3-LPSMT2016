<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">


    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/circle_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        custom:donut_progress="30"
        android:layout_marginLeft="15dp"
        custom:donut_finished_color="@color/colorAccent"/>

    <com.unitn.android.alessio.ocr3.RoundedImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/thumbnail"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:padding="10dp"
        android:id="@+id/linearLayout"
        android:layout_alignBottom="@+id/circle_progress"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/title"
            android:layout_gravity="left|center_horizontal"
            android:textColor="#000000"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="descrizione tipo data o roba simile va anche a capo?"
            android:id="@+id/description"
            android:singleLine="false"
            android:textColor="#333333"
            android:paddingLeft="5dp"
            android:maxLines="2" />

    </LinearLayout>

</RelativeLayout>