<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context="com.unitn.android.alessio.ocr3.ActivityOCRElement"
    android:transitionName="main">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topBar2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/ocrElementToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/circle_progress"
        android:layout_width="96dp"
        android:layout_height="96dp"
        custom:donut_progress="100"
        custom:donut_finished_color="@color/colorAccent"
        android:layout_gravity="bottom|right"
        android:layout_margin="6dp"/>

    <com.unitn.android.alessio.ocr3.RoundedImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/thumbnail"
        android:layout_margin="@dimen/fab_margin"
        app:layout_anchor="@+id/container"
        app:layout_anchorGravity="bottom|end"
        android:transitionName="image"
        android:layout_gravity="bottom|right" />

    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- Put more views here if you want, it's stock frame layout  -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/maxImageView"
            android:background="@color/NeroTrasparente" />

    </io.codetail.widget.RevealFrameLayout>


</FrameLayout>
